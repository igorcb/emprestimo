<h1>Entrar no Sistema</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :login, "Nome" %>
      <%= f.text_field :login %>

      <%= f.label :password, "Senha" %>
      <%= f.password_field :password %>

      <%= f.submit "Entrar", class: "btn btn-large btn-primary" %>
    <% end %>

    
  </div>
</div>